/*Calculation of simple interest for three sets of p,nand r*/
#include<stdio.h>
int main ()
{
   int p,n,count;
   float r,si;
   count=1;
   while (count<=3)
   {
     printf("\nEnter values of p,n and r: ");
     scanf("%d%d%f",&p,&n,&r);
     si=p*r*n/100;
     printf("Simple interest=Rs. " , si);
     
     count=count+1;
     
   }
   
   return 0 ;
   
}   
