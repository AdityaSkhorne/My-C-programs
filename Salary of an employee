#include <stdio.h>
int main()
{
  float bp,da,hra,grpay;
  printf("\nEnter basic salary of Ramesh:");
  scanf("%f",&bp);
  da=0.4*bp;
  hra=0.2*bp;
  grpay=bp+da+hra;
  printf("Basic salary of Ramesh=%f\n",bp);
  printf("Dareness allowance=%f\n",da);
  printf("House rent allowance=%f\n",hra);
  printf("Gross pay of Ramesh=%f\n",grpay);
  return 0;
  
}
